{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "removeComments": false,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  },
  "include": [
    "@types/gnome-shell/global.d.ts",
    "@types/gnome-shell/ambient.d.ts",
    // Our sources
    "src/**/*.ts"
  ],
  "exclude": [".eslintrc.cjs"]
}
